<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE errors>

<errors>

  <defaults>
    <default type="Grammar error">
      <ids>
        <re v="real-.*"/>
        <e id="unreal-girjji"/>
      </ids>
      <header>
        <title xml:lang="en">Real-word error</title>
        <title xml:lang="ga">Čállinmeattáhus</title>
      </header>
      <body>
        <description xml:lang="en">The word "$1" exists in the dictionary, but means something different in this context.</description>
        <description xml:lang="ga">"$1" maŋis galggašii leat blah</description>
      </body>
    </default>

    <default type="Grammar error">
      <ids>
        <e id="default"/>
      </ids>
      <header>
        <title xml:lang="en">Grammar error</title>
        <title xml:lang="ga">Čállinmeattáhus</title>
      </header>
      <body>
        <description xml:lang="en">The word "$1" exists in the dictionary, but means something different in this context.</description>
        <description xml:lang="ga">"$1" maŋis galggašii leat blah</description>
      </body>
    </default>
  </defaults>

  <error id="real-override">
    <header>
      <title xml:lang="en">cake instead of cheese</title>
      <title xml:lang="ga">gáhkku iige vuostá</title>
    </header>
    <body>
      <description xml:lang="en">this should be "cake" instead of "cheese"</description>
      <description xml:lang="ga">galggašii leat "gáhkku" iige "vuostá"</description>
    </body>
  </error>

  <error id="msyn-valency-ill">
    <header>
      <title xml:lang="en">illative instead of accusative</title>
      <title xml:lang="ga">illatiiva iige akkusatiiva</title>
      <references> <ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">illative instead of accusative</description>
      <description xml:lang="ga">illatiiva iige akkusatiiva</description>
    <examples>
      <ex xml:lang="ga">Hui ollu liikon {bohccobierggu} ja {goikebierggu}.</ex>
    </examples>
    </body>
  </error>


  <error id="msyn-valency-acc">
    <header>
      <title xml:lang="en">accusative instead of nominative</title>
      <title xml:lang="ga">akkusatiiva iige nominatiiva</title>
      <references> <ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">accusative instead of nominative</description>
      <description xml:lang="ga">illatiiva iige nominatiiva</description>
    <examples>
      <ex xml:lang="ga">Mun čálán {reive}.</ex>
    </examples>
    </body>
  </error>

  <error id="msyn-valency-loc-com">
    <header>
      <title xml:lang="en">msyn thing</title>
      <title xml:lang="ga">msyn thingy</title>
      <references><ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">wrong word</description>
      <description xml:lang="ga">boasttut sátni</description>
    <examples>
      <ex xml:lang="ga">Ovdalgihtiigeassima sierra máksingoartta ferte álohii atnit go máksá boastagiro dahje báŋku {badjel}.</ex>
    </examples>
    </body>
  </error>

  <error id="lex-bokte-not-badjel">
    <header>
      <title xml:lang="en">"bokte" not "badjel"</title>
      <title xml:lang="ga">"bokte" iige "badjel"</title>
      <references><ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">wrong word</description>
      <description xml:lang="ga">boasttut sátni</description>
    <examples>
      <ex xml:lang="ga">Ovdalgihtiigeassima sierra máksingoartta ferte álohii atnit go máksá boastagiro dahje báŋku {badjel}.</ex>
    </examples>
    </body>
  </error>

  <error id="syn-pred-not-attr-msg">
    <header>
      <title xml:lang="ga">«$1» ja «$2» leaba blah</title>
    </header>
    <body>
      <description xml:lang="ga">Predicative, iige attributive – «$1» ja «$2» leaba blah</description>
    </body>
  </error>

  <error id="msyn-valency-go-inf">
    <header>
      <title xml:lang="en">Try a subclause with <em>go</em> instead of illative</title>
      <title xml:lang="ga">Iskka<em>go</em>-oalgecealkaga iige infinitiiva</title>
      <references> <ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en"><em>go</em> instead of illative</description>
      <description xml:lang="ga"><em>go</em> iige infinitiiva</description>
    <examples>
      <ex xml:lang="ga">Soai leaigga sihke dolkan ja suhttan gullat olbmuid šláddariid sudno birra, ja bovdiiga.</ex>
    </examples>
    </body>
  </error>

</errors>
