<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE errors>

<errors>

  <defaults>
    <default type="Grammar error">
      <ids>
        <re v="real-.*"/>
        <e id="unreal-girjji"/>
      </ids>
      <header>
        <title xml:lang="en">Real-word error</title>
        <title xml:lang="ga">Earráid fhíor-fhocail</title>
      </header>
      <body>
        <description xml:lang="en">The word "$1" exists in the dictionary, but means something different in this context.</description>
        <description xml:lang="ga">Tá an focal "$1" san fhoclóir, ach ciallaíonn sé rud éigin difriúil sa chomhthéacs seo.</description>
      </body>
    </default>

    <default type="Grammar error">
      <ids>
        <e id="default"/>
      </ids>
      <header>
        <title xml:lang="en">Grammatical error</title>
        <title xml:lang="ga">Earráid ghramadaí</title>
      </header>
      <body>
        <description xml:lang="en">The word "$1" exists in the dictionary, but means something different in this context.</description>
        <description xml:lang="ga">"$1" maŋis galggašii leat blah</description>
      </body>
    </default>
  </defaults>

  <error id="real-override">
    <header>
      <title xml:lang="en">cake instead of cheese</title>
      <title xml:lang="ga">gáhkku iige vuostá</title>
    </header>
    <body>
      <description xml:lang="en">this should be "cake" instead of "cheese"</description>
      <description xml:lang="ga">galggašii leat "gáhkku" iige "vuostá"</description>
    </body>
  </error>


  <error id="msyn-noun-defart">
    <header>
      <title xml:lang="en">Definite article of noun</title>
      <title xml:lang="ga">Alt cinnte an ainmfhocail</title>
      <references> <ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">If the noun, here "$1" is preceded by a definite article, here "$2", it should itself be in the definite form.ç∂</description>
      <description xml:lang="ga">Má thagann alt cinnte roimh an ainmfhocal, anseo "$1", anseo "$2", ba cheart go mbeadh sé san fhoirm cinnte.</description>
    <examples>
      <ex xml:lang="ga">exex1.</ex>
    </examples>
    </body>
  </error>


  <error id="msyn-adj-gender">
    <header>
      <title xml:lang="en">The adjective should agree with the noun in gender</title>
      <title xml:lang="ga">Ba chóir go n-aontódh an aidiacht leis an ainmfhocal in inscne</title>
      <references> <ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">Gender long ...</description>
      <description xml:lang="ga">illatiiva iige nominatiiva</description>
    <examples>
      <ex xml:lang="ga">Mun čálán {reive}.</ex>
    </examples>
    </body>
  </error>

  <error id="msyn-len-after-prep">
    <header>
      <title xml:lang="en">Soft consonant after preposition</title>
      <title xml:lang="ga">Consan bog i ndiaidh na réamhfhocal</title>
      <references><ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">wrong initial consonant</description>
      <description xml:lang="ga">boasttut sátni</description>
    <examples>
      <ex xml:lang="ga">Ovdalgihtiigeassima sierra máksingoartta ferte álohii atnit go máksá boastagiro dahje báŋku {badjel}.</ex>
    </examples>
    </body>
  </error>

  <error id="msyn-teastaigh-ó">
    <header>
      <title xml:lang="en">teastaigh ó</title>
      <title xml:lang="ga">teastaigh ó</title>
      <references><ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">teastaigh ó longer expl</description>
      <description xml:lang="ga">boasttut sátni</description>
    <examples>
      <ex xml:lang="ga">Ovdalgihtiigeassima sierra máksingoartta ferte álohii atnit go máksá boastagiro dahje báŋku {badjel}.</ex>
    </examples>
    </body>
  </error>

  <error id="msyn-inis-de">
    <header>
      <title xml:lang="en">«$1» and «$2» are blah</title>
      <title xml:lang="ga">«$1» ja «$2» leaba blah</title>
    </header>
    <body>
      <description xml:lang="ga">Predicative, iige attributive – «$1» ja «$2» leaba blah</description>
    </body>
  </error>

  <error id="msyn-cúpla-plnoun-sgnoun">
    <header>
      <title xml:lang="en">cúpla in plural ... in singular</title>
      <title xml:lang="ga">Iskka<em>go</em>-oalgecealkaga iige infinitiiva</title>
      <references> <ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en">... and longer version</description>
      <description xml:lang="ga"><em>go</em> iige infinitiiva</description>
    <examples>
      <ex xml:lang="ga">Soai leaigga sihke dolkan ja suhttan gullat olbmuid šláddariid sudno birra, ja bovdiiga.</ex>
    </examples>
    </body>
  </error>

  <error id="msyn-i-rith-nom-gen">
    <header>
      <title xml:lang="en">i rith should b3 g3n and not nom</title>
      <title xml:lang="ga">Iskka<em>go</em>-oalgecealkaga iige infinitiiva</title>
      <references> <ref n=""/></references>
    </header>
    <body>
      <description xml:lang="en"><em>go</em> instead of illative</description>
      <description xml:lang="ga"><em>go</em> iige infinitiiva</description>
    <examples>
      <ex xml:lang="ga">Soai leaigga sihke dolkan ja suhttan gullat olbmuid šláddariid sudno birra, ja bovdiiga.</ex>
    </examples>
    </body>
  </error>

</errors>
